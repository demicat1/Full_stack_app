<body>
    <main class="hello__section ibg">
        <img src="/static/assets/vak/fon.jpg" class="main__fon" alt="fon">
        <header class="header container">
            <ul class="header__nav">
                <li class="nav__logo">
                    <a class="">Vacancies</a>
                </li>
                <ul class="header__nav__main">
                    <li class="nav__main__item ">
                        <a class="main__item__link">Main</a>
                    </li>
                    <li class="nav__main__item">
                        <a class="main__item__link">About Us</a>
                    </li>
                    <li class="nav__main__item">
                        <a class="main__item__link">Contacts</a>
                    </li>
                    <li class="nav__main__item">
                        <a class="main__item__link">username</a>
                    </li>
                </ul>
            </ul>
        </header>
        <section class="main h-75 d-flex align-items-center justify-content-center">
            <!--        <div class="container container__form h-25">-->
            <!--            <form class="row g-3 w-100 h-100" method="post">-->
            <!--                <div class="col-auto w-75">-->
            <!--                    <input type="search" name="SearchQuery" class="form-control w-100 h-100"  placeholder="search">-->
            <!--                </div>-->
            <!--                <div class="col-auto w-10">-->
            <!--                    <button type="button" id="searchBTN" formmethod="post" class="btn btn-primary mb-3 w-100 h-100">search</button>-->
            <!--                </div>-->
            <!--            </form>-->
            <!--    </div>-->
            <div class="container">
                <a class="text-white" href="/search">More detailed Search</a>
                <a class="text-white" href="#">I am looking for an employee</a>
                <form class="row g-3 w-100 h-100" method="post">
                    <div class="col-auto w-75">
                        <input type="search" name="SearchQuery" id="searchQuery" class="form-control w-100 h-100" placeholder="search">
                        <div class="d-flex flex-column w-auto suggest p-0 m-0" id="suggest" style="position: absolute; top:300px; left:200px"></div>
                    </div>

                    <div class="col-auto w-10">
                        <button id="searchBTN" type="button" class="btn btn-primary mb-3 w-100 h-100">search</button>
                    </div>
                </form>
            </div>
        </section>
    </main>
    <section class="list">
        <div class="wrapper wrapper__list">
            <form class="filter">
                <h3>Filter</h3>
                <div class="privateness">
                    <select class="form-select mb-2 select__privateness" id="selected__privateness" name="type" aria-label="Default select example">
                    <option value="<%=selected__pr%>" selected><%=selected__pr%></option>
                    <option value="private">private</option>
                    <option value="not private">not private</option>
                </select>
                </div>
                <div class="city">
                    <select class="form-select mb-2 select__city" name="city" id="selected__city" aria-label="Default select example">
                        <%if(typeof selected__city !== null){%>
                    <option value="<%=selected__city%>" selected><%=selected__city%></option>
                        <%} else{%>
                        <option value="all" selected>all</option>
                        <%}%>
                    <option value="NurSultan">NurSultan</option>
                    <option value="Aktobe">Aktobe</option>
                    <option value="Almata">Almata</option>
                </select>
                </div>
                <button class="btn btn-primary" type="button" id="filterBtn">apply</button>
            </form>
            <div class="list__cont">
                <%offers.forEach(item=>{ %>
                    <div class="list__cont__item"><div class="list__cont__item__container"><h3 class="cont__item__title"><%=item.title%></h3>
<ul class="cont__item__list"><li class="cont__item__list__child__name">Name: <%=item.name_of_comp%></li><li class="cont__item__list__child__name"><%=item.sphere%></li>
<li class="cont__item__list__child"><%=item.city%></li>
<li class="cont__item__list__child">Privateness: <%=item.privateness%></li>
<li class="cont__item__list__child__salary">Salary :<%=item.salary%></li></ul>
<p class="text">Details:<%=item.details%></p>
<button class="btn btn-primary p-2 w-25">See more </button>
</div>
</div>
                <%})%>

            </div>
        </div>
        <div class="btn__set">
            <a class="cont__btn btn__back" id="btn__back" >&lt</a>
            <%if(pageNum){%>
            <a class="cont__btn pagenum" id="pagenum"><%=pageNum%></a>
            <%}else{%>
            <a class="cont__btn pagenum" id="pagenum">1</a>
            <%}%>
            <a class="cont__btn btn__forward" id ="btn__forward"  >&gt</a>
        </div>
    </section>

    <script>
    document.getElementById('filterBtn').onclick = function (){
        location.href =`/vakansyy?pageNum=${document.getElementById('pagenum').innerHTML}&privateness=${document.getElementById("selected__privateness").value}&City=${document.getElementById('selected__city').value}`
    }
    document.getElementById('btn__back').onclick = function(){

        location.href=`/vakansyy?pageNum=${parseInt(document.getElementById('pagenum').innerHTML) -1}&privateness=${document.getElementById("selected__privateness").value}&City=${document.getElementById('selected__city').value}`
    }
    document.getElementById('btn__forward').onclick = function(){

        location.href=`/vakansyy?pageNum=${parseInt(document.getElementById('pagenum').innerHTML)+1}&privateness=${document.getElementById("selected__privateness").value}&City=${document.getElementById('selected__city').value}`
    }
    document.getElementById('searchBTN').onclick = function(){
        location.href=`/vakansyy?pageNum=${1}&privateness=${document.getElementById("selected__privateness").value}&City=${document.getElementById('selected__city').value}`
    }
    </script>
</body>

</html>
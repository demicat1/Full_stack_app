<div class="container-fluid">
    <div class="container container__form h-25">-->
                    <form class="row g-3 w-100 h-100" method="post">
                        <div class="col-auto w-75">
                            <input type="search" name="SearchQuery" class="form-control w-100 h-100"  placeholder="search">
                        </div>
                     <div class="col-auto w-10">
                            <button id="searchBTN" formmethod="post" class="btn btn-primary mb-3 w-100 h-100">search</button>
                     </div>
                    </form>
            </div>
    <%if(typeof results !=='undefined') { %>
        <%results.forEach((item)=>{ %>
            <div class="list__cont__item">
                <div class="list__cont__item__container">
                    <h3 class="cont__item__title"> <%=item.title%></h3>
                    <ul class="cont__item__list">
                        <li class="cont__item__list__child"><%=item.name%></li>
                        <li class="cont__item__list__child"><%=item.sphere%></li>
                        <li class="cont__item__list__child"><%=item.city%></li>
                        <li class="cont__item__list__child"><%=item.type%></li>
                        <li class="cont__item__list__child"><%=item.salary%></li>
                    </ul>
                    <p class="text"> <%=item.details%> </p>
                    <button class="btn btn-primary p-2 w-25">see more</button>
                </div>
            </div>
        <%})%>
    <%}%>
</div>





<script>
    let searchBase;
    document.onload = function (){
        var xhr = new XMLHttpRequest();
        xhr.open("GET","./static/scripts/vakansyy/searchRES.json",true);
        xhr.onload = function (){
            localStorage.setItem("search", this.responseText);
            xhr.send();
        }
    }
    console.log(JSON.parse(localStorage.getItem("search")));
</script>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link rel="icon" type="image/png" href="/static/shopping-mall-icon-16-167840.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        * {
            padding: 0;
            margin: 0;
        }
        
        body {
            padding: 0;
            margin: 0;
        }
        
        .container-fluid {
            padding: 0;
            margin: 0;
        }
        
        .side-panel {
            background-color: rgb(227, 224, 224);
            position: static;
            min-height: 100%;
        }
    </style>
</head>

<body class="d-flex h-100">
    <div class="container-fluid  w-25  h-100  ">
        <div class="d-flex w-100 flex-column align-items-center">
            <div class="admin-image" style="width:100px; height:100px">
                <img src='/static/assets/userpage/blank-avatar.jpg' class="h-100 w-100">
            </div>
            <div class>admin</div>
            <ul class="side-panel-functions ">
                <li class="functions-item">
                    <a class="item-link" href="adminpage/userManager">list of users</a>
                </li>
                <li class="functions-item">
                    <a class="item-link">offers</a>
                </li>
            </ul>
        </div>
    </div>

    <div class="container container-dark bg-dark">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">avatar</th>
                <th scope="col">Email</th>
                <th scope="col">password</th>
            </tr>
        </thead>
        <%let i = 1%>
            <%users.forEach((user)=>{ %>
                <table class="table table-dark">

                    <tbody>
                        <tr>
                            <th scope="row">
                                <%=i++%>
                            </th>
                            <td>
                                <div contenteditable>
                                    <%=user.email%>
                                </div>
                            </td>
                            <td>
                                <div contenteditable>
                                    <%=user.email%>
                                </div>
                            </td>
                            <td>
                                <div contenteditable>
                                    <%=user.name%>
                                </div>
                            </td>
                            <td>
                                <button class="btn btn-primary" method="post"><a class="text-white"href="admin_page/edit/<%=user.email%>">edit</a></button>
                                <button class="btn btn-danger" method="post"><a class="text-white"href="/adminpage/delete-user/<%=user.email%>">delete</a></button>
                            </td>
                        </tr>
                    </tbody>

                    <%})%>
                </table>
    </div>












    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
</body>

</html>